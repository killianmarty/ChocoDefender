[Unit]
Description=ChocoDefender Background Service
After=multi-user.target

[Service]
Type=simple
# Remplace "choco" par le mot de ton choix si besoin
ExecStart=/usr/local/bin/chocodefender "choco"
Restart=always
RestartSec=3
User=root
Group=root

# Important : On coupe la sortie standard pour ne pas polluer les logs
# car ton programme fait des printf() Ã  chaque touche.
StandardOutput=null
StandardError=journal

[Install]
WantedBy=multi-user.target